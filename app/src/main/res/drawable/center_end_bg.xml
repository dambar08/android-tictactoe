<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <solid android:color="@color/colorBorder" />

        </shape>
    </item>

    <!-- This is for border bottom but
    you can change this according to your need -->
    <item
        android:bottom="@dimen/bottom_border_stroke_width"
        android:left="@dimen/left_border_stroke_width"
        android:top="@dimen/top_border_stroke_width">
        <shape android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

</layer-list>